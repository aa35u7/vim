function! TagbarByFileType()
	if &filetype!="go"
		let g:tagbar_width=35
		let g:tagbar_left = 1
		"autocmd VimEnter * nested :TagbarOpen
		autocmd VimEnter * nested :call tagbar#autoopen(1)
		nmap  <F2> :TagbarToggle<cr>
	endif
endfunction
autocmd FileType * call TagbarByFileType()

